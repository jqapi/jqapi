<script>
  import $ from "jquery";

  $(() => {
    const $job = $("#job");
    const hideJob = window.localStorage.getItem("hideJob");

    if (!hideJob) {
      $job.slideDown(200);
    }

    $(".delete", $job).click(() => {
      $job.fadeOut(100);
      window.localStorage.setItem("hideJob", "true");
    });
  });
</script>
